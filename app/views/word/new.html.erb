<h1>New Vocabulary Word</h1>
<%=params%>
<form action = "/word/create" accept-charset="UTF-8" method = "patch">
    <input type="hidden" name="authenticity_token" value= '<%=form_authenticity_token%>'>

    <div>
        <label for = "word_title">Vocabulary Word</lable><br>
        <input type = "text" name = "word[title]" id='word_title'>
    </div>
    <div>
        <label for = "word_meaning">Meaning</lable><br>
        <input type = "text" name = "word[meaning]" id='word_meaning'>
    </div>
    <div>
        <label for = "word_pos">Part of Speech</lable><br>
        <select type = "text" name = "word[pos]" id="word_pos">
            <option value = "noun">Noun</option>
            <option value = "pronoun">Pronoun</option>
            <option value = "verb">Verb</option>
            <option value = "adjective">Adjective</option>
            <option value = "adverb">Adverb</option>
            <option value = "preposition">Preposition</option>
            <option value = "conjunction">Conjunction</option>
            <option value = "interjection">Interjection</option>
        </select>
    </div>
    <div>
        <label for = "word_textbook">Textbook</lable><br>
        <select type = 'text' name = 'word[textbook]' id = 'word_textbook'>
            <% Textbook.all.each do |t| %>
                <option value='<%=t.id %>'><%=t.name%></option>
            <%end%>
        </select>
    </div>
    <div>
        <label for = "word_chapter">Chapter</lable><br>
        <input type = "text" name = "word[chapter]" id='word_chapter'>
    </div>

    <div>
        <input type="submit" name = "commit" value = "Create Word" data-disable-with="Create Word">
    </div>
</form>

